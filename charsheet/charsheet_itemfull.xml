<?xml version="1.0" encoding="iso-8859-1"?>
<root version="2.0">
	<windowclass name="itemfull"><!--{{{-->
		<frame>recordsheet</frame>
		<placement>
			<size height="450" width="375" />
		</placement>
		<sizelimits>
			<minimum height="450" width="375" />
			<dynamic />
		</sizelimits>        
		<minimize>minimized_item</minimize>
		<tooltip field="name" />
		<sheetdata>
            <sub_record_header name="header">
                <class>item_header</class>
            </sub_record_header>            
			<ref_contentframe/>

			<stringcontrol name="quantitylabel">
				<anchored to="contentframe" position="insidetopleft" offset="5,5" width="180"/> 
				<font>sheetlabelsmall</font>
				<static>Quantity:</static>
			</stringcontrol>

			<numberfield name="numquantity">
				<anchored to="quantitylabel" position="right" offset="0,0" width="50"/>
				<frame>
					<name>modifier</name>
					<offset>3,3,3,3</offset>
				</frame>
				<font>sheetlabelsmall</font>
			</numberfield>
			
			<stringcontrol name="costlabel">
				<anchored to="quantitylabel" position="below" offset="0,5"/>
				<font>sheetlabelsmall</font>
				<static>Cost:</static>
			</stringcontrol>

			<numberfield name="numcost">
				<anchored to="numquantity" position="below" offset="0,5"/>
				<frame>
					<name>modifier</name>
					<offset>3,3,3,3</offset>
				</frame>
				<font>sheetlabelsmall</font>
			</numberfield>

			<stringcontrol name="costtotallabel">
				<anchored to="costlabel" position="below" offset="0,5"/>
				<font>sheetlabelsmall</font>
				<static>Cost Total:</static>
			</stringcontrol>

			<linkednumber name="numcosttotal">
				<anchored to="numcost" position="below" offset="0,10" width="50"/>
				<frame>
					<name>modifier</name>
					<offset>3,3,3,3</offset>
				</frame>
				<font>sheetlabelsmall</font>
				<source>
					<name>numcost</name>
					<op>+</op>
				</source>             
				<source>
					<name>numquantity</name>
					<op>*</op>
				</source>
            </linkednumber>

			<stringcontrol name="rangelabel">
				<anchored to="costtotallabel" position="below" offset="0,5"/>
				<font>sheetlabelsmall</font>
				<static>Range:</static>
			</stringcontrol>

			<stringfield name="range">
				<anchored to="numcosttotal" position="belowleft" offset="0,5" width="110"/>
				<frame>
					<name>textline</name>
					<offset>1,5,1,1</offset>
				</frame>
				<font>sheetlabelsmall</font>
			</stringfield>

			<stringcontrol name="durationlabel">
				<anchored to="rangelabel" position="below" offset="0,5"/>
				<font>sheetlabelsmall</font>
				<static>Duration:</static>
			</stringcontrol>

			<stringfield name="duration">
				<anchored to="range" position="below" offset="0,5"/>
				<frame>
					<name>textline</name>
					<offset>1,5,1,1</offset>
				</frame>
				<font>sheetlabelsmall</font>
				<tabtarget>
					<prev>range</prev>
					<next>casting</next>
				</tabtarget>
			</stringfield>

			<stringcontrol name="castinglabel">
				<anchored to="durationlabel" position="below" offset="0,5"/>
				<font>sheetlabelsmall</font>
				<static>Casting Difficulty:</static>
			</stringcontrol>

			<stringfield name="casting">
				<anchored to="duration" position="below" offset="0,5"/>
				<frame>
					<name>textline</name>
					<offset>1,5,1,1</offset>
				</frame>
				<font>sheetlabelsmall</font>
				<tabtarget>
					<prev>duration</prev>
					<next>effect</next>
				</tabtarget>
				<empty>TSD</empty>
			</stringfield>

			<stringcontrol name="effectsteplabel">
				<anchored to="castinglabel" position="below" offset="0,5"/>
				<font>sheetlabelsmall</font>
				<static>Effect Step:</static>
			</stringcontrol>

			<numberfield name="effect">
				<anchored to="casting" position="belowleft" offset="0,5" width="25"/>
				<frame>
					<name>modifier</name>
					<offset>3,3,3,3</offset>
				</frame>
				<font>sheetlabelsmall</font>
				<tabtarget>
					<prev>casting</prev>
					<next>effecttext</next>
				</tabtarget>
			</numberfield>

			<stringcontrol name="effecttextlabel">
				<anchored to="effectsteplabel" position="below" offset="0,5"/>
				<font>sheetlabelsmall</font>
				<static>Effect:</static>
			</stringcontrol>
			
			<stringfield name="effecttext">
				<anchored to="effect" position="belowleft" offset="0,5" width="110"/>
				<frame>
					<name>textline</name>
					<offset>1,5,1,1</offset>
				</frame>
				<font>sheetlabelsmall</font>
				<tabtarget>
					<prev>duration</prev>
					<next>effect</next>
				</tabtarget>
				<empty></empty>
			</stringfield>
			
			<stringcontrol name="descriptionlabel">
				<anchored to="effecttextlabel" position="belowleft" offset="0,10"/>
				<font>sheettext</font>
				<static>Description</static>
				<center/>
			</stringcontrol>
			
			<record_description/>
			<record_scrollbar_description/>

			<resize_recordsheet />
			<close_recordsheet />			

		</sheetdata>
	</windowclass>
	
	<windowclass name="item_header">
		<margins control="0,0,0,7" />
		<sheetdata>
			<link_record_header>
				<class>itemfull</class>
			</link_record_header>

			<anchor_record_header_right />

			<string_record_name name="name">
				<anchored>
					<top offset="5" />
					<left offset="40" />
					<right parent="rightanchor" anchor="left" relation="current" offset="-15" />
				</anchored>
			</string_record_name>
		</sheetdata>
	</windowclass>
	
</root>